<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".Activity.Registration">

        <RelativeLayout
            android:id="@+id/ActivityRegistration_relative_enter_your_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ActivityRegistration_relative_enterEmail">

            <TextView
                android:id="@+id/ActivityRegistration_TextVie_EnterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Enter your name"
                android:textColor="@color/titleColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ActivityRegistration_EditText_EnterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ActivityRegistration_TextVie_EnterName"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_shape"
                android:hint="Your full name"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/textGrayColor"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ActivityRegistration_relative_enterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/ActivityRegistration_TextVie_EnterEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Enter your Email"
                android:textColor="@color/titleColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ActivityRegistration_EditText_EnterEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ActivityRegistration_TextVie_EnterEmail"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_shape"
                android:hint="Your your Email"
                android:inputType="textEmailAddress"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/textGrayColor"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ActivityRegistration_relative_enterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ActivityRegistration_relative_enterEmail">

            <TextView
                android:id="@+id/ActivityRegistration_TextVie_EnterPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Enter your name"
                android:textColor="@color/titleColor"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/Registration_digits_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ActivityRegistration_TextVie_EnterPassword"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ActivityRegistration_digit5"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:digits="0123456789"
                    android:inputType="numberPassword"
                    android:maxLength="4" />

                <RelativeLayout
                    android:id="@+id/digit1_layout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_shape">

                    <EditText
                        android:id="@+id/ActivityRegistration_digit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:focusable="false"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="25sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/digit2_layout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_shape">

                    <EditText
                        android:id="@+id/ActivityRegistration_digit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:focusable="false"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="25sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/digit3_layout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_shape">

                    <EditText
                        android:id="@+id/ActivityRegistration_digit3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:focusable="false"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="25sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/digit4_layout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_shape">

                    <EditText
                        android:id="@+id/ActivityRegistration_digit4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:focusable="false"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="25sp" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/ActivityRegistration_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@drawable/button_shape"
            android:text="Register"
            android:textColor="@color/titleColor"
            android:textSize="20sp" />
    </RelativeLayout>
</layout>